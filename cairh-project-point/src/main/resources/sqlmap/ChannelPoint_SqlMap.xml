<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE sqlMap SYSTEM "sql-map-2.dtd">
<sqlMap namespace="ChannelPoint" dataSource="htsecDataSource">
    <typeAlias alias="channelPoint" type="cairh.community.api.point.model.ChannelPoint"/>
    
    <resultMap id="channelPointResult" class="channelPoint">
        <result property="id" column="ID"/>
        <result property="name" column="NAME"/>
        <result property="channelRank" column="CHANNEL_RANK"/>
        <result property="parentId" column="PARENT_ID"/>
        <result property="isLeafNode" column="IS_LEAF_NODE"/>
        <result property="points" column="POINTS"/>
        <result property="remark" column="REMARK"/>
        <result property="status" column="STATUS"/>
        <result property="isModify" column="IS_MODIFY"/>
        <result property="channelCode" column="CHANNEL_CODE"/>
        <result property="isShow" column="IS_SHOW"/>
    </resultMap>
    
    
    

	<!-- 用于select查询公用抽取的列 -->
	<sql id="commonColumns">
	    <![CDATA[
        	ID ,
        	NAME ,
        	CHANNEL_RANK ,
        	PARENT_ID ,
        	IS_LEAF_NODE ,
        	POINTS ,
        	REMARK ,
        	STATUS ,
        	IS_MODIFY ,
        	CHANNEL_CODE,
        	IS_SHOW
	    ]]>
	</sql>
	<sql id="dynamicUpdate">
	  <dynamic prepend=" ">
	       <isNotNull prepend="," property="name">
	             NAME = #name#
	       </isNotNull>
	       <isNotNull prepend="," property="channelRank">
	             CHANNEL_RANK = #channelRank#
	       </isNotNull>
	       <isNotNull prepend="," property="parentId">
	             PARENT_ID = #parentId#
	       </isNotNull>
	       <isNotNull prepend="," property="isLeafNode">
	             IS_LEAF_NODE = #isLeafNode#
	       </isNotNull>
	       <isNotNull prepend="," property="points">
	             POINTS = #points#
	       </isNotNull>
	       <isNotNull prepend="," property="remark">
	             REMARK = #remark#
	       </isNotNull>
	        <isNotNull prepend="," property="status">
	             STATUS = #status#
	       </isNotNull>
	       <isNotNull prepend="," property="isModify">
	             IS_MODIFY = #isModify#
	       </isNotNull>
	       <isNotNull prepend="," property="channelCode">
	             CHANNEL_CODE = #channelCode#
	       </isNotNull>
	       <isNotNull prepend="," property="isShow">
	             IS_SHOW = #isShow#
	       </isNotNull>
	    </dynamic>	
	</sql>
	
    <insert id="insert" parameterClass="channelPoint">
    <![CDATA[
        INSERT INTO T_SQ_CHANNEL_POINT (
        	ID ,
        	NAME ,
        	CHANNEL_RANK ,
        	PARENT_ID ,
        	IS_LEAF_NODE ,
        	POINTS ,
        	REMARK ,
        	STATUS ,
        	IS_MODIFY ,
        	CHANNEL_CODE,
        	IS_SHOW
        ) VALUES (
        	#id# ,
        	#name# ,
        	#channelRank# ,
        	#parentId# ,
        	#isLeafNode# ,
        	#points# ,
        	#remark# ,
        	#status# ,
        	#isModify# ,
        	#channelCode# ,
        	#isShow#
        )
    ]]>
    <!--
    mysql:		type="post" SELECT  select last_insert_id()
    sqlserver:	type="post" SELECT  @@identity  AS  ID
    oracle:		type="pre" 	SELECT  sequenceName.nextval AS ID FROM DUAL
    DB2:		type="pre"	values nextval for sequenceName
    -->
        <selectKey resultClass="java.lang.Long" type="pre" keyProperty="id" >
            select CHANNEL_POINT_SEQ.nextVal  from dual
        </selectKey>
    </insert>

    <update id="update" parameterClass="channelPoint">
        UPDATE T_SQ_CHANNEL_POINT SET <include refid="dynamicUpdate"/>
	   <![CDATA[ WHERE 
	        ID = #id# 
    ]]>
    </update>

    <delete id="delete" parameterClass="java.lang.Long" isKey="true">
    <![CDATA[
        delete from T_SQ_CHANNEL_POINT where
        ID = #id# 
    ]]>
    </delete>
    
    <select id="getById" resultMap="channelPointResult" isKey="true">
	    select <include refid="commonColumns"/>
	    <![CDATA[ from T_SQ_CHANNEL_POINT where 
		        ID = #id# 
	    ]]>
    </select>
    
        <select id="getByName" resultMap="channelPointResult" isKey="true">
	    select <include refid="commonColumns"/>
	    <![CDATA[ from T_SQ_CHANNEL_POINT where 
		        NAME like '%'|| #name# || '%' 
	    ]]>
    </select>

	<sql id="dynamicWhere">
	    <dynamic prepend="WHERE">
	       <isNotEmpty prepend="AND" property="id">
	             ID = #id#
	       </isNotEmpty>
	       <isNotEmpty prepend="AND" property="name">
	             NAME like '%'|| #name# || '%'
	       </isNotEmpty>
	       <isNotEmpty prepend="AND" property="channelRank">
	             CHANNEL_RANK = #channelRank#
	       </isNotEmpty>
	       <isNotEmpty prepend="AND" property="parentId">
	             PARENT_ID = #parentId#
	       </isNotEmpty>
	       <isNotEmpty prepend="AND" property="isLeafNode">
	             IS_LEAF_NODE = #isLeafNode#
	       </isNotEmpty>
	       <isNotEmpty prepend="AND" property="points">
	             POINTS = #points#
	       </isNotEmpty>
	       <isNotEmpty prepend="AND" property="remark">
	             REMARK = #remark#
	       </isNotEmpty>
	       <isNotEmpty prepend="AND" property="status">
	             STATUS = #status#
	       </isNotEmpty>
	       <isNotEmpty prepend="AND" property="isModify">
	             IS_MODIFY = #isModify#
	       </isNotEmpty>
	       <isNotEmpty prepend="AND" property="channelCode">
	             CHANNEL_CODE = #channelCode#
	       </isNotEmpty>
	       <isNotEmpty prepend="AND" property="isShow">
	             IS_SHOW = #isShow#
	       </isNotEmpty>
	    </dynamic>	
	</sql>
	
    <!--
    	分页查询已经使用Dialect进行分页,也可以不使用Dialect直接编写分页
    	因为分页查询将传 #offset#,#pageSize#,#lastRows# 三个参数,不同的数据库可以根于此三个参数属性应用不同的分页实现
    -->
    <select id="pageSelect_count" resultClass="java.lang.Integer">
    	<![CDATA[ select count(*) from T_SQ_CHANNEL_POINT ]]>
		<include refid="dynamicWhere"/>    
    </select>
    <select id="pageSelect" resultMap="channelPointResult">
    	select <include refid="commonColumns"/>
	    <![CDATA[ from T_SQ_CHANNEL_POINT]]>
		<include refid="dynamicWhere"/>
		<dynamic prepend="ORDER BY">
			<isNotEmpty property="sortColumns">$sortColumns$</isNotEmpty>
		</dynamic>
    </select>


	<select id="getBy" resultMap="channelPointResult">
    	select <include refid="commonColumns"/>
	    <![CDATA[ from T_SQ_CHANNEL_POINT]]>
		<include refid="dynamicWhere"/>
    </select>
    
    <select id="getByProperties" resultMap="channelPointResult" >
		select <include refid="commonColumns"/>
		<![CDATA[ from T_SQ_CHANNEL_POINT]]>
		<include refid="dynamicWhere"/>
	</select>
	
	<select id="getListBy" resultClass="java.util.HashMap">
    	select 	ID ,
        	NAME ,
        	CHANNEL_RANK ,
        	PARENT_ID ,CHANNEL_CODE
	    <![CDATA[ from T_SQ_CHANNEL_POINT]]>
		<include refid="dynamicWhere"/>
    </select>
	
	
</sqlMap>
