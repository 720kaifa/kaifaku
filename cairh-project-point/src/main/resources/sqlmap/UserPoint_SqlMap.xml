<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE sqlMap SYSTEM "sql-map-2.dtd">
<sqlMap namespace="UserPoint" dataSource="htsecDataSource">
    <typeAlias alias="userPoint" type="cairh.community.api.point.model.UserPoint"/>
   
    <resultMap id="userPointResult" class="userPoint">
        <result property="id" column="ID"/>
        <result property="userId" column="USER_ID"/>
        <result property="totalPoints" column="TOTAL_POINTS"/>
        <result property="availablePoints" column="AVAILABLE_POINTS"/>
        <result property="frozenPoints" column="FROZEN_POINTS"/>
        <result property="usedPoints" column="USED_POINTS"/>
        <result property="status" column="STATUS"/>
        <result property="createTime" column="CREATE_TIME"/>
        <result property="updateTime" column="UPDATE_TIME"/>
        <result property="lastCheckinDate" column="LAST_CHECKIN_DATE"/>
        <result property="continuousCheckinTimes" column="CONTINUOUS_CHECKIN_TIMES"/>
    </resultMap>

	<!-- 用于select查询公用抽取的列 -->
	<sql id="commonColumns">
	    <![CDATA[
        	ID ,
        	USER_ID ,
        	TOTAL_POINTS ,
        	AVAILABLE_POINTS ,
        	FROZEN_POINTS ,
        	USED_POINTS ,
        	STATUS ,
        	CREATE_TIME ,
        	UPDATE_TIME ,
        	LAST_CHECKIN_DATE ,
        	CONTINUOUS_CHECKIN_TIMES 
	    ]]>
	</sql>
	<sql id="dynamicUpdate">
	  <dynamic prepend=" ">
	       <isNotNull prepend="," property="userId">
	             USER_ID = #userId#
	       </isNotNull>
	       <isNotNull prepend="," property="totalPoints">
	             TOTAL_POINTS = #totalPoints#
	       </isNotNull>
	       <isNotNull prepend="," property="availablePoints">
	             AVAILABLE_POINTS = #availablePoints#
	       </isNotNull>
	       <isNotNull prepend="," property="frozenPoints">
	             FROZEN_POINTS = #frozenPoints#
	       </isNotNull>
	       <isNotNull prepend="," property="usedPoints">
	             USED_POINTS = #usedPoints#
	       </isNotNull>
	       <isNotNull prepend="," property="status">
	             STATUS = #status#
	       </isNotNull>
	       <isNotNull prepend="," property="createTime">
	             CREATE_TIME = #createTime#
	       </isNotNull>
	       <isNotNull prepend="," property="updateTime">
	             UPDATE_TIME = #updateTime#
	       </isNotNull>
	       <isNotNull prepend="," property="lastCheckinDate">
	             LAST_CHECKIN_DATE = #lastCheckinDate#
	       </isNotNull>
	       <isNotNull prepend="," property="continuousCheckinTimes">
	             CONTINUOUS_CHECKIN_TIMES = #continuousCheckinTimes#
	       </isNotNull>
	    </dynamic>	
	</sql>
	
    <insert id="insert" parameterClass="userPoint">
    <![CDATA[
        INSERT INTO T_SQ_USER_POINT (
        	ID ,
        	USER_ID ,
        	TOTAL_POINTS ,
        	AVAILABLE_POINTS ,
        	FROZEN_POINTS ,
        	USED_POINTS ,
        	STATUS ,
        	CREATE_TIME ,
        	UPDATE_TIME ,
        	LAST_CHECKIN_DATE ,
        	CONTINUOUS_CHECKIN_TIMES 
        ) VALUES (
        	#id# ,
        	#userId# ,
        	#totalPoints# ,
        	#availablePoints# ,
        	#frozenPoints# ,
        	#usedPoints# ,
        	#status# ,
        	#createTime# ,
        	#updateTime# ,
        	#lastCheckinDate# ,
        	#continuousCheckinTimes# 
        )
    ]]>
    <!--
    mysql:		type="post" SELECT  select last_insert_id()
    sqlserver:	type="post" SELECT  @@identity  AS  ID
    oracle:		type="pre" 	SELECT  sequenceName.nextval AS ID FROM DUAL
    DB2:		type="pre"	values nextval for sequenceName
    -->
        <selectKey resultClass="java.lang.Long" type="pre" keyProperty="id" >
            select USER_POINT_SEQ.nextVal  from dual 
        </selectKey>
    </insert>

    <update id="update" parameterClass="userPoint">
        UPDATE T_SQ_USER_POINT SET <include refid="dynamicUpdate"/>
	   <![CDATA[ WHERE 
	        ID = #id# 
    ]]>
    </update>

    <delete id="delete" parameterClass="java.lang.Long" isKey="true">
    <![CDATA[
        delete from T_SQ_USER_POINT where
        ID = #id# 
    ]]>
    </delete>
    
    <select id="getById" resultMap="userPointResult" isKey="true">
	    select <include refid="commonColumns"/>
	    <![CDATA[ from T_SQ_USER_POINT where 
		        ID = #id# 
	    ]]>
    </select>
    <select id="getByUserId" resultMap="userPointResult" isKey="true">
	    select <include refid="commonColumns"/>
	    <![CDATA[ from T_SQ_USER_POINT where 
		        USER_ID = #userId# 
	    ]]>
    </select>

	<sql id="dynamicWhere">
	    <dynamic prepend="WHERE">
	       <isNotEmpty prepend="AND" property="id">
	             ID = #id#
	       </isNotEmpty>
	       <isNotEmpty prepend="AND" property="userId">
	             USER_ID = #userId#
	       </isNotEmpty>
	       <isNotEmpty prepend="AND" property="totalPoints">
	             TOTAL_POINTS = #totalPoints#
	       </isNotEmpty>
	       <isNotEmpty prepend="AND" property="availablePoints">
	             AVAILABLE_POINTS = #availablePoints#
	       </isNotEmpty>
	       <isNotEmpty prepend="AND" property="frozenPoints">
	             FROZEN_POINTS = #frozenPoints#
	       </isNotEmpty>
	       <isNotEmpty prepend="AND" property="usedPoints">
	             USED_POINTS = #usedPoints#
	       </isNotEmpty>
	       <isNotEmpty prepend="AND" property="status">
	             STATUS = #status#
	       </isNotEmpty>
	       <isNotEmpty prepend="AND" property="createTime">
	             CREATE_TIME = #createTime#
	       </isNotEmpty>
	       <isNotEmpty prepend="AND" property="updateTime">
	             UPDATE_TIME = #updateTime#
	       </isNotEmpty>
	       <isNotEmpty prepend="AND" property="lastCheckinDate">
	             LAST_CHECKIN_DATE = #lastCheckinDate#
	       </isNotEmpty>
	       <isNotEmpty prepend="AND" property="continuousCheckinTimes">
	             CONTINUOUS_CHECKIN_TIMES = #continuousCheckinTimes#
	       </isNotEmpty>
	    </dynamic>	
	</sql>
	
    <!--
    	分页查询已经使用Dialect进行分页,也可以不使用Dialect直接编写分页
    	因为分页查询将传 #offset#,#pageSize#,#lastRows# 三个参数,不同的数据库可以根于此三个参数属性应用不同的分页实现
    -->
    <select id="pageSelect_count" resultClass="java.lang.Integer">
    	<![CDATA[ select count(*) from T_SQ_USER_POINT ]]>
		<include refid="dynamicWhere"/>    
    </select>
    <select id="pageSelect" resultMap="userPointResult">
    	select <include refid="commonColumns"/>
	    <![CDATA[ from T_SQ_USER_POINT]]>
		<include refid="dynamicWhere"/>
		<dynamic prepend="ORDER BY">
			<isNotEmpty property="sortColumns">$sortColumns$</isNotEmpty>
		</dynamic>
    </select>
    <select id="queryUserPointList_count" resultClass="java.lang.Integer">
    	 <![CDATA[select count(*) from T_SQ_USER_POINT WHERE 1=1]]>
		  <isNotEmpty prepend="AND" property="userId">
	             USER_ID in ( $userId$ )
	       </isNotEmpty>
	        <isNotEmpty prepend="AND" property="status">
	             STATUS = #status#
	       </isNotEmpty>
    </select>
    <select id="queryUserPointList" resultMap="userPointResult">
    	select <include refid="commonColumns"/>
	    <![CDATA[ from T_SQ_USER_POINT WHERE 1=1]]>
		  <isNotEmpty prepend="AND" property="userId">
	             USER_ID in ( $userId$ )
	       </isNotEmpty>
	        <isNotEmpty prepend="AND" property="status">
	             STATUS = #status#
	       </isNotEmpty>
		<dynamic prepend="ORDER BY">
			<isNotEmpty property="sortColumns">$sortColumns$</isNotEmpty>
		</dynamic>
    </select>
    
    <select id="getByProperties" resultMap="userPointResult">
		select <include refid="commonColumns"/>
	    <![CDATA[ from T_SQ_USER_POINT]]>
		<include refid="dynamicWhere"/>
	</select>
</sqlMap>
