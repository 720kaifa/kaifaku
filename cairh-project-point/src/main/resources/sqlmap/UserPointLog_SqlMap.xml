<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE sqlMap SYSTEM "sql-map-2.dtd">
<sqlMap namespace="UserPointLog" dataSource="htsecDataSource">
    <typeAlias alias="userPointLog" type="cairh.community.api.point.model.UserPointLog"/>
   
    <resultMap id="userPointLogResult" class="userPointLog">
        <result property="id" column="ID"/>
        <result property="userId" column="USER_ID"/>
        <result property="occurPoints" column="OCCUR_POINTS"/>
        <result property="afterPoints" column="AFTER_POINTS"/>
        <result property="pointDefineCode" column="POINT_DEFINE_CODE"/>
        <result property="remark" column="REMARK"/>
        <result property="createTime" column="CREATE_TIME"/>
         <result property="changeType" column="CHANGE_TYPE"/>
    </resultMap>

	<!-- 用于select查询公用抽取的列 -->
	<sql id="commonColumns">
	    <![CDATA[
        	ID ,
        	USER_ID ,
        	OCCUR_POINTS ,
        	AFTER_POINTS ,
        	POINT_DEFINE_CODE ,
        	REMARK ,
        	CREATE_TIME ,
        	CHANGE_TYPE
	    ]]>
	</sql>
	<sql id="dynamicUpdate">
	  <dynamic prepend=" ">
	       <isNotNull prepend="," property="userId">
	             USER_ID = #userId#
	       </isNotNull>
	       <isNotNull prepend="," property="occurPoints">
	             OCCUR_POINTS = #occurPoints#
	       </isNotNull>
	       <isNotNull prepend="," property="afterPoints">
	             AFTER_POINTS = #afterPoints#
	       </isNotNull>
	       <isNotNull prepend="," property="pointDefineCode">
	             POINT_DEFINE_CODE = #pointDefineCode#
	       </isNotNull>
	       <isNotNull prepend="," property="remark">
	             REMARK = #remark#
	       </isNotNull>
	       <isNotNull prepend="," property="createTime">
	             CREATE_TIME = #createTime#
	       </isNotNull>
	        <isNotNull prepend="," property="changeType">
	             CHANGE_TYPE = #changeType#
	       </isNotNull>
	    </dynamic>	
	</sql>
	
    <insert id="insert" parameterClass="userPointLog">
    <![CDATA[
        INSERT INTO T_SQ_USER_POINT_LOG (
        	ID ,
        	USER_ID ,
        	OCCUR_POINTS ,
        	AFTER_POINTS ,
        	POINT_DEFINE_CODE ,
        	REMARK ,
        	CREATE_TIME ,
        	CHANGE_TYPE
        ) VALUES (
        	#id# ,
        	#userId# ,
        	#occurPoints# ,
        	#afterPoints# ,
        	#pointDefineCode# ,
        	#remark# ,
        	#createTime# ,
        	#changeType# 
        )
    ]]>
    <!--
    mysql:		type="post" SELECT  select last_insert_id()
    sqlserver:	type="post" SELECT  @@identity  AS  ID
    oracle:		type="pre" 	SELECT  sequenceName.nextval AS ID FROM DUAL
    DB2:		type="pre"	values nextval for sequenceName
    -->
        <selectKey resultClass="java.lang.Long" type="pre" keyProperty="id" >
            select USER_POINT_LOG_SEQ.nextVal from dual
        </selectKey>
    </insert>

    <update id="update" parameterClass="userPointLog">
        UPDATE T_SQ_USER_POINT_LOG SET <include refid="dynamicUpdate"/>
	   <![CDATA[ WHERE 
	        ID = #id# 
    ]]>
    </update>
    
    <update id="modifyUserId" parameterClass="java.util.HashMap">
        UPDATE T_SQ_USER_POINT_LOG SET 
	             USER_ID = #afterId# WHERE   USER_ID = #beginId# 
    </update>

    <delete id="delete" parameterClass="java.lang.Long" isKey="true">
    <![CDATA[
        delete from T_SQ_USER_POINT_LOG where
        ID = #id# 
    ]]>
    </delete>
    
    <select id="getById" resultMap="userPointLogResult" isKey="true">
	    select <include refid="commonColumns"/>
	    <![CDATA[ from T_SQ_USER_POINT_LOG where 
		        ID = #id# 
	    ]]>
    </select>

	<sql id="dynamicWhere">
	    <dynamic prepend="WHERE">
	       <isNotEmpty prepend="AND" property="id">
	             ID = #id#
	       </isNotEmpty>
	       <isNotEmpty prepend="AND" property="userId">
	             USER_ID = #userId#
	       </isNotEmpty>
	       <isNotEmpty prepend="AND" property="occurPoints">
	             OCCUR_POINTS = #occurPoints#
	       </isNotEmpty>
	       <isNotEmpty prepend="AND" property="afterPoints">
	             AFTER_POINTS = #afterPoints#
	       </isNotEmpty>
	       <isNotEmpty prepend="AND" property="pointDefineCode">
	             POINT_DEFINE_CODE = #pointDefineCode#
	       </isNotEmpty>
	       <isNotEmpty prepend="AND" property="remark">
	             REMARK = #remark#
	       </isNotEmpty>
	       <isNotEmpty prepend="AND" property="createTime">
	             CREATE_TIME = #createTime#
	       </isNotEmpty>
	        <isNotEmpty prepend="AND" property="changeType">
	             CHANGE_TYPE = #changeType#
	       </isNotEmpty>
	    </dynamic>	
	</sql>
	
	<sql id="Example_Where_Clause" >
	 <dynamic prepend="WHERE"> 
             <isNotNull prepend="AND" property="userId"> 
                     USER_ID = #userId#
             </isNotNull> 
             <isNotNull prepend="AND" property="beginDate"> 
                     CREATE_TIME >= #beginDate#
             </isNotNull> 
             <isNotNull prepend="AND" property="endDate"> 
                 	 <![CDATA[	 CREATE_TIME <= #endDate# ]]>
             </isNotNull>  
             <isGreaterThan  prepend="AND" property="flag" compareValue="0"> 
                   	 OCCUR_POINTS > 0
             </isGreaterThan> 
	         <isLessThan	 prepend="AND" property="flag" compareValue="0"> 
	               	 <![CDATA[ OCCUR_POINTS < 0 ]]>
	         </isLessThan>  
     </dynamic> 
  	</sql>
    <!--
    	分页查询已经使用Dialect进行分页,也可以不使用Dialect直接编写分页
    	因为分页查询将传 #offset#,#pageSize#,#lastRows# 三个参数,不同的数据库可以根于此三个参数属性应用不同的分页实现
    -->
    <select id="pageSelect_count" resultClass="java.lang.Integer">
    	<![CDATA[ select count(*) from T_SQ_USER_POINT_LOG ]]>
		<include refid="dynamicWhere"/>    
    </select>
    <select id="pageSelect" resultMap="userPointLogResult">
    	select <include refid="commonColumns"/>
	    <![CDATA[ from T_SQ_USER_POINT_LOG]]>
		<include refid="dynamicWhere"/>
		<dynamic prepend="ORDER BY">
			<isNotEmpty property="sortColumns">$sortColumns$</isNotEmpty>
		</dynamic>
    </select>
    
	<select id="countByExample"  resultClass="java.lang.Integer">
	    select count(*) from T_SQ_USER_POINT_LOG
	      <include refid="Example_Where_Clause" />
	  </select>
	  
	    <select id="selectByExample" resultMap="userPointLogResult">
	     SELECT * FROM ( SELECT A.*, ROWNUM RN FROM ( select
	    <include refid="commonColumns" />
	    from T_SQ_USER_POINT_LOG
	      <include refid="Example_Where_Clause" />
	      order by  create_time desc
	     <![CDATA[  ) A  WHERE ROWNUM < #endRow# ) where RN>#startRow# ]]> 
	  </select> 
	  <!-- 待实现 -->
	   <select id="userExpendPoints" resultClass="java.util.HashMap">
      SELECT * FROM ( SELECT A.*, ROWNUM RN FROM (
  	<![CDATA[
  	
	 ]]>
       <![CDATA[ ) A WHERE ROWNUM < #{endRow}  ) WHERE RN > #{startRow} ]]> 
  </select>
  
      <select id="queryUserPointLogList" resultClass="java.util.HashMap">
    	 <![CDATA[
        SELECT
		  b.NICK_NAME,
		  l.USER_ID,
		  l.OCCUR_POINTS,
		  l.AFTER_POINTS,
		  l.POINT_DEFINE_CODE,
		  l.REMARK,
		  TO_CHAR(l.CREATE_TIME,'yyyy.mm.dd HH24:mi') AS CREATE_TIME_STR,
		  l.CREATE_TIME
		FROM
		  T_SQ_USER_POINT_LOG l
		LEFT JOIN T_SQ_USER_BASE b ON l.USER_ID = b.USER_ID
		WHERE
		  1=1
        ]]>
          <isNotEmpty prepend="AND" property="pointDefineCode">
	             l.POINT_DEFINE_CODE = #pointDefineCode#
	       </isNotEmpty>
          <isNotEmpty prepend="AND" property="nickName">
               b.NICK_NAME like '%'|| #nickName# || '%'
          </isNotEmpty>
          <![CDATA[ ORDER BY CREATE_TIME DESC ]]>
    </select>
  
  <select id="queryByChangeType" resultMap="userPointLogResult">
  	select <include refid="commonColumns" />
	    from T_SQ_USER_POINT_LOG
	    where 1=1
	    <isNotEmpty prepend="AND" property="userId">
	             USER_ID =#userId#
	   </isNotEmpty>
  		<isNotEmpty prepend="AND" property="changeType">
	             CHANGE_TYPE in($changeType$)
	   </isNotEmpty>
	   <isNotEmpty prepend="AND" property="startDate">
	             CREATE_TIME >= #startDate#
	    </isNotEmpty>
	    <isNotEmpty prepend="AND" property="endDate">
	       		<![CDATA[ CREATE_TIME < #endDate# ]]>
	    </isNotEmpty>	   
	   
  </select>
	  
</sqlMap>
