<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE sqlMap SYSTEM "sql-map-2.dtd">
<sqlMap namespace="MaUserinfo" dataSource="htsecDataSource">
    <typeAlias alias="maUserinfo" type="cairh.community.api.game.kxian.model.MaUserinfo"/>
   
    <resultMap id="maUserinfoResult" class="maUserinfo">
        <result property="userId" column="USER_ID"/>
        <result property="mobile" column="MOBILE"/>
        <result property="image" column="IMAGE"/>
        <result property="nickName" column="NICK_NAME"/>
    </resultMap>

	<!-- 用于select查询公用抽取的列 -->
	<sql id="commonColumns">
	    <![CDATA[
        	USER_ID ,
        	MOBILE ,
        	IMAGE ,
        	NICK_NAME 
	    ]]>
	</sql>
	<sql id="dynamicUpdate">
	  <dynamic prepend=" ">
	       <isNotNull prepend="," property="mobile">
	             MOBILE = #mobile#
	       </isNotNull>
	       <isNotNull prepend="," property="image">
	             IMAGE = #image#
	       </isNotNull>
	       <isNotNull prepend="," property="nickName">
	             NICK_NAME = #nickName#
	       </isNotNull>
	    </dynamic>	
	</sql>
	
    <insert id="insert" parameterClass="maUserinfo">
    <![CDATA[
        INSERT INTO MA_USERINFO (
        	USER_ID ,
        	MOBILE ,
        	IMAGE ,
        	NICK_NAME 
        ) VALUES (
        	#userId# ,
        	#mobile# ,
        	#image# ,
        	#nickName# 
        )
    ]]>
    <!--
    mysql:		type="post" SELECT  select last_insert_id()
    sqlserver:	type="post" SELECT  @@identity  AS  ID
    oracle:		type="pre" 	SELECT  sequenceName.nextval AS ID FROM DUAL
    DB2:		type="pre"	values nextval for sequenceName
    -->
    </insert>

    <update id="update" parameterClass="maUserinfo">
        UPDATE MA_USERINFO SET <include refid="dynamicUpdate"/>
	   <![CDATA[ WHERE 
	        USER_ID = #userId# 
    ]]>
    </update>

    <delete id="delete" parameterClass="java.math.BigDecimal" isKey="true">
    <![CDATA[
        delete from MA_USERINFO where
        USER_ID = #userId# 
    ]]>
    </delete>
    
    <select id="getById" resultMap="maUserinfoResult" isKey="true">
	    select <include refid="commonColumns"/>
	    <![CDATA[ from MA_USERINFO where 
		        USER_ID = #userId# 
	    ]]>
    </select>

	<sql id="dynamicWhere">
	    <dynamic prepend="WHERE">
	       <isNotEmpty prepend="AND" property="userId">
	             USER_ID = #userId#
	       </isNotEmpty>
	       <isNotEmpty prepend="AND" property="mobile">
	             MOBILE = #mobile#
	       </isNotEmpty>
	       <isNotEmpty prepend="AND" property="image">
	             IMAGE = #image#
	       </isNotEmpty>
	       <isNotEmpty prepend="AND" property="nickName">
	             NICK_NAME = #nickName#
	       </isNotEmpty>
	    </dynamic>	
	</sql>
	
    <!--
    	分页查询已经使用Dialect进行分页,也可以不使用Dialect直接编写分页
    	因为分页查询将传 #offset#,#pageSize#,#lastRows# 三个参数,不同的数据库可以根于此三个参数属性应用不同的分页实现
    -->
    <select id="pageSelect_count" resultClass="java.lang.Integer">
    	<![CDATA[ select count(*) from MA_USERINFO ]]>
		<include refid="dynamicWhere"/>    
    </select>
    <select id="pageSelect" resultMap="maUserinfoResult">
    	select <include refid="commonColumns"/>
	    <![CDATA[ from MA_USERINFO]]>
		<include refid="dynamicWhere"/>
		<dynamic prepend="ORDER BY">
			<isNotEmpty property="sortColumns">$sortColumns$</isNotEmpty>
		</dynamic>
    </select>

</sqlMap>
