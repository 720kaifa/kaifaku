<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE sqlMap SYSTEM "sql-map-2.dtd">
<sqlMap namespace="MaHistoryRanking" dataSource="htsecDataSource">
    <typeAlias alias="maHistoryRanking" type="cairh.community.api.game.kxian.model.MaHistoryRanking"/>
   
    <resultMap id="maHistoryRankingResult" class="maHistoryRanking">
        <result property="userId" column="USER_ID"/>
        <result property="rate" column="RATE"/>
        <result property="datetime" column="DATETIME"/>
        <result property="rank" column="RANK"/>
        <result property="prizePoint" column="PRIZE_POINT"/>
    </resultMap>

	<!-- 用于select查询公用抽取的列 -->
	<sql id="commonColumns">
	    <![CDATA[
        	USER_ID ,
        	RATE ,
        	DATETIME ,
        	RANK,
        	PRIZE_POINT
	    ]]>
	</sql>
	<sql id="dynamicUpdate">
	  <dynamic prepend=" ">
	       <isNotNull prepend="," property="rate">
	             RATE = #rate#
	       </isNotNull>
	       <isNotNull prepend="," property="datetime">
	             DATETIME = #datetime#
	       </isNotNull>
	       <isNotNull prepend="," property="rank">
	             RANK = #rank#
	       </isNotNull>
	       <isNotNull prepend="," property="prizePoint">
	             PRIZE_POINT = #prizePoint#
	       </isNotNull>
	    </dynamic>	
	</sql>
	
    <insert id="insert" parameterClass="maHistoryRanking">
    <![CDATA[
        INSERT INTO MA_HISTORY_RANKING (
        	USER_ID ,
        	RATE ,
        	DATETIME ,
        	RANK ,
        	PRIZE_POINT
        ) VALUES (
        	#userId# ,
        	#rate# ,
        	#datetime# ,
        	#rank# ,
        	#prizePoint#
        )
    ]]>
    <!--
    mysql:		type="post" SELECT  select last_insert_id()
    sqlserver:	type="post" SELECT  @@identity  AS  ID
    oracle:		type="pre" 	SELECT  sequenceName.nextval AS ID FROM DUAL
    DB2:		type="pre"	values nextval for sequenceName
    -->
    </insert>

    <update id="update" parameterClass="maHistoryRanking">
        UPDATE MA_HISTORY_RANKING SET <include refid="dynamicUpdate"/>
	   <![CDATA[ WHERE 
	        USER_ID = #userId# 
    ]]>
    </update>

    <delete id="delete" parameterClass="java.math.BigDecimal" isKey="true">
    <![CDATA[
        delete from MA_HISTORY_RANKING where
        USER_ID = #userId# 
    ]]>
    </delete>
    
    <select id="getById" resultMap="maHistoryRankingResult" isKey="true">
	    select <include refid="commonColumns"/>
	    <![CDATA[ from MA_HISTORY_RANKING where 
		        USER_ID = #userId# 
	    ]]>
    </select>

	<sql id="dynamicWhere">
	    <dynamic prepend="WHERE">
	       <isNotEmpty prepend="AND" property="userId">
	             USER_ID = #userId#
	       </isNotEmpty>
	       <isNotEmpty prepend="AND" property="rate">
	             RATE = #rate#
	       </isNotEmpty>
	       <isNotEmpty prepend="AND" property="datetime">
	             DATETIME = #datetime#
	       </isNotEmpty>
	       <isNotEmpty prepend="AND" property="rank">
	             RANK = #rank#
	       </isNotEmpty>
	        <isNotEmpty prepend="AND" property="prizePoint">
	             PRIZE_POINT = #prizePoint#
	       </isNotEmpty>
	    </dynamic>	
	</sql>
	
    <!--
    	分页查询已经使用Dialect进行分页,也可以不使用Dialect直接编写分页
    	因为分页查询将传 #offset#,#pageSize#,#lastRows# 三个参数,不同的数据库可以根于此三个参数属性应用不同的分页实现
    -->
    <select id="pageSelect_count" resultClass="java.lang.Integer">
    	<![CDATA[ select count(*) from MA_HISTORY_RANKING ]]>
		<include refid="dynamicWhere"/>    
    </select>
    <select id="pageSelect" resultMap="maHistoryRankingResult">
    	select <include refid="commonColumns"/>
	    <![CDATA[ from MA_HISTORY_RANKING]]>
		<include refid="dynamicWhere"/>
		<dynamic prepend="ORDER BY">
			<isNotEmpty property="sortColumns">$sortColumns$</isNotEmpty>
		</dynamic>
    </select>
    
    
	<select id="historyRanking" resultMap="maHistoryRankingResult">
		select
	     <include refid="commonColumns"/>
	    from MA_HISTORY_RANKING 
	      <![CDATA[    where datetime = #time# and rank<=10 ]]>
	     order by RANK 
	</select>
	
	<select id="getRank" resultMap="maHistoryRankingResult">
		 select
	     <include refid="commonColumns"/>
	    from MA_HISTORY_RANKING 
	          where datetime = #intTime# and USER_ID=#userId#
	</select>
	
	<select id="myGamePointCount" resultClass="java.lang.Integer">
		 select count(0) from MA_HISTORY_RANKING 
	          where  USER_ID=#userId# 
	</select>
	
	<select id="myGamePointLog" resultMap="maHistoryRankingResult">
		 SELECT * FROM ( SELECT A.*, ROWNUM RN FROM (select
	     <include refid="commonColumns"/>
	    from MA_HISTORY_RANKING 
	          where  USER_ID=#userId# order by DATETIME desc
         <![CDATA[  ) A  WHERE ROWNUM < #endRow# ) where RN>#startRow# ]]> 
	</select>
	
	<select id="getToalPoint" resultClass="java.lang.Integer">
		 select nvl(sum(prize_point),0) from MA_HISTORY_RANKING 
	          where  USER_ID=#userId# 
	</select>
</sqlMap>
