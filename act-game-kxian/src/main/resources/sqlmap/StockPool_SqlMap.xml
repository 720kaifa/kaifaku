<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE sqlMap SYSTEM "sql-map-2.dtd">
<sqlMap namespace="StockPool" dataSource="htsecDataSource">
    <typeAlias alias="stockPool" type="cairh.community.api.game.kxian.model.StockPool"/>
   
    <resultMap id="stockPoolResult" class="stockPool">
        <result property="stockCode" column="STOCK_CODE"/>
        <result property="stockName" column="STOCK_NAME"/>
        <result property="marketCode" column="MARKET_CODE"/>
        <result property="status" column="STATUS"/>
    </resultMap>

	<!-- 用于select查询公用抽取的列 -->
	<sql id="commonColumns">
	    <![CDATA[
        	STOCK_CODE ,
        	STOCK_NAME ,
        	MARKET_CODE ,
        	STATUS 
	    ]]>
	</sql>
	<sql id="dynamicUpdate">
	  <dynamic prepend=" ">
	       <isNotNull prepend="," property="stockName">
	             STOCK_NAME = #stockName#
	       </isNotNull>
	       <isNotNull prepend="," property="marketCode">
	             MARKET_CODE = #marketCode#
	       </isNotNull>
	       <isNotNull prepend="," property="status">
	             STATUS = #status#
	       </isNotNull>
	    </dynamic>	
	</sql>
	
    <insert id="insert" parameterClass="stockPool">
    <![CDATA[
        INSERT INTO MA_STOCK_POOL (
        	STOCK_CODE ,
        	STOCK_NAME ,
        	MARKET_CODE ,
        	STATUS 
        ) VALUES (
        	#stockCode# ,
        	#stockName# ,
        	#marketCode# ,
        	#status# 
        )
    ]]>
    <!--
    mysql:		type="post" SELECT  select last_insert_id()
    sqlserver:	type="post" SELECT  @@identity  AS  ID
    oracle:		type="pre" 	SELECT  sequenceName.nextval AS ID FROM DUAL
    DB2:		type="pre"	values nextval for sequenceName
    -->
    </insert>

    <update id="update" parameterClass="stockPool">
        UPDATE MA_STOCK_POOL SET <include refid="dynamicUpdate"/>
	   <![CDATA[ WHERE 
	        STOCK_CODE = #stockCode# 
    ]]>
    </update>

    <delete id="delete" parameterClass="java.math.BigDecimal" isKey="true">
    <![CDATA[
        delete from MA_STOCK_POOL where
        STOCK_CODE = #stockCode# 
    ]]>
    </delete>
    
    <select id="getById" resultMap="stockPoolResult" isKey="true">
	    select <include refid="commonColumns"/>
	    <![CDATA[ from MA_STOCK_POOL where 
		        STOCK_CODE = #stockCode# 
	    ]]>
    </select>

	<sql id="dynamicWhere">
	    <dynamic prepend="WHERE">
	       <isNotEmpty prepend="AND" property="stockCode">
	             STOCK_CODE = #stockCode#
	       </isNotEmpty>
	       <isNotEmpty prepend="AND" property="stockName">
	             STOCK_NAME = #stockName#
	       </isNotEmpty>
	       <isNotEmpty prepend="AND" property="marketCode">
	             MARKET_CODE = #marketCode#
	       </isNotEmpty>
	       <isNotEmpty prepend="AND" property="status">
	             STATUS = #status#
	       </isNotEmpty>
	    </dynamic>	
	</sql>
	
    <!--
    	分页查询已经使用Dialect进行分页,也可以不使用Dialect直接编写分页
    	因为分页查询将传 #offset#,#pageSize#,#lastRows# 三个参数,不同的数据库可以根于此三个参数属性应用不同的分页实现
    -->
    <select id="pageSelect_count" resultClass="java.lang.Integer">
    	<![CDATA[ select count(*) from MA_STOCK_POOL ]]>
		<include refid="dynamicWhere"/>    
    </select>
    <select id="pageSelect" resultMap="stockPoolResult">
    	select <include refid="commonColumns"/>
	    <![CDATA[ from MA_STOCK_POOL]]>
		<include refid="dynamicWhere"/>
		<!-- <dynamic prepend="ORDER BY">
			<isNotEmpty property="sortColumns">$sortColumns$</isNotEmpty>
		</dynamic> -->
    </select>
    
    <select id="getCount" resultClass="java.lang.Integer">
    	select count(0)
	    <![CDATA[ from MA_STOCK_POOL]]>
		<include refid="dynamicWhere"/>
    </select>

	<select id="getByRow" resultMap="stockPoolResult">
	     SELECT * FROM (  SELECT A.*, ROWNUM RN FROM ( select
	    <include refid="commonColumns" />
	    from MA_STOCK_POOL
		<include refid="dynamicWhere"/>
	      order by STOCK_CODE
	     <![CDATA[  ) A   WHERE  ROWNUM<(#random#+1) ) where RN>(#random#-1)  ]]> 
	  </select> 
</sqlMap>
