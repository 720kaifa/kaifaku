<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE sqlMap SYSTEM "sql-map-2.dtd">
<sqlMap namespace="MaTodayRanking" dataSource="htsecDataSource">
    <typeAlias alias="maTodayRanking" type="cairh.community.api.game.kxian.model.MaTodayRanking"/>
   
    <resultMap id="maTodayRankingResult" class="maTodayRanking">
        <result property="userId" column="USER_ID"/>
        <result property="rate" column="RATE"/>
        <result property="datetime" column="DATETIME"/>
    </resultMap>

	<!-- 用于select查询公用抽取的列 -->
	<sql id="commonColumns">
	    <![CDATA[
        	USER_ID ,
        	RATE ,
        	DATETIME 
	    ]]>
	</sql>
	<sql id="dynamicUpdate">
	  <dynamic prepend=" ">
	       <isNotNull prepend="," property="rate">
	             RATE = #rate#
	       </isNotNull>
	       <isNotNull prepend="," property="datetime">
	             DATETIME = #datetime#
	       </isNotNull>
	    </dynamic>	
	</sql>
	
    <insert id="insert" parameterClass="maTodayRanking">
    <![CDATA[
        INSERT INTO MA_TODAY_RANKING (
        	USER_ID ,
        	RATE ,
        	DATETIME
        ) VALUES (
        	#userId# ,
        	#rate# ,
        	#datetime# 
        )
    ]]>
    <!--
    mysql:		type="post" SELECT  select last_insert_id()
    sqlserver:	type="post" SELECT  @@identity  AS  ID
    oracle:		type="pre" 	SELECT  sequenceName.nextval AS ID FROM DUAL
    DB2:		type="pre"	values nextval for sequenceName
    -->
    </insert>

    <update id="update" parameterClass="maTodayRanking">
        UPDATE MA_TODAY_RANKING SET <include refid="dynamicUpdate"/>
	   <![CDATA[ WHERE 
	        USER_ID = #userId# 
    ]]>
    </update>

    <delete id="delete" parameterClass="java.lang.Long" isKey="true">
    <![CDATA[
        delete from MA_TODAY_RANKING where
        USER_ID = #userId# 
    ]]>
    </delete>
    
    <delete id="deleteByTime" parameterClass="java.lang.Integer" isKey="true">
    <![CDATA[
        delete from MA_TODAY_RANKING where
        DATETIME = #intTime# 
    ]]>
    </delete>
    
    <select id="getById" resultMap="maTodayRankingResult" isKey="true">
	    select <include refid="commonColumns"/>
	    <![CDATA[ from MA_TODAY_RANKING where 
		        USER_ID = #userId# 
	    ]]>
    </select>

	<sql id="dynamicWhere">
	    <dynamic prepend="WHERE">
	       <isNotEmpty prepend="AND" property="userId">
	             USER_ID = #userId#
	       </isNotEmpty>
	       <isNotEmpty prepend="AND" property="rate">
	             RATE = #rate#
	       </isNotEmpty>
	       <isNotEmpty prepend="AND" property="datetime">
	             DATETIME = #datetime#
	       </isNotEmpty>
	    </dynamic>	
	</sql>
	
    <!--
    	分页查询已经使用Dialect进行分页,也可以不使用Dialect直接编写分页
    	因为分页查询将传 #offset#,#pageSize#,#lastRows# 三个参数,不同的数据库可以根于此三个参数属性应用不同的分页实现
    -->
    <select id="pageSelect_count" resultClass="java.lang.Integer">
    	<![CDATA[ select count(*) from MA_TODAY_RANKING ]]>
		<include refid="dynamicWhere"/>    
    </select>
    <select id="pageSelect" resultMap="maTodayRankingResult">
    	select <include refid="commonColumns"/>
	    <![CDATA[ from MA_TODAY_RANKING]]>
		<include refid="dynamicWhere"/>
		<dynamic prepend="ORDER BY">
			<isNotEmpty property="sortColumns">$sortColumns$</isNotEmpty>
		</dynamic>
    </select>


	<select id="todayRanking" resultClass="java.lang.Integer" resultMap="maTodayRankingResult">
		 select
	     <include refid="commonColumns"/>
	    from MA_TODAY_RANKING 
	          where datetime = #time#
	     order by rate desc 
	</select>
	
	
	<select id="getRank" resultMap="maTodayRankingResult">
		 select
	     <include refid="commonColumns"/>
	    from MA_TODAY_RANKING 
	          where datetime = #intTime# and USER_ID=#userId#
	</select>
	     
    <select id="todayAll" resultClass="java.lang.Integer" resultMap="maTodayRankingResult">
		 select
	     <include refid="commonColumns"/>
	    from MA_TODAY_RANKING 
	          where datetime = #intTime# order by rate desc
	</select>
</sqlMap>
